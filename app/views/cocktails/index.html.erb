<div class="card-container">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <!-- insert <div class="card"> -->
          <%#= link_to cocktail_path(cocktail) do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>');">
            <div class="card-category"></div>
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>

            <!-- <a class="card-link" href="#" ></a> -->
            <%= link_to '', cocktail_path(cocktail) , class: 'card-link'%>
            <%= link_to 'delete cocktail', cocktail_path(cocktail), method: :delete, class: 'btn btn-danger top-right' %>
          </div>



        </div>
        <% end %>
      </div>
    </div>
  </div>

